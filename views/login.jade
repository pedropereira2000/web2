doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/cv.css')
    link(rel='stylesheet', href='/stylesheets/itens.css')
  body
    div(class="container-login")    
        div(class="card-login")
            div(class="row it-login")
                h3 Login
            form(class="form", method="POST", action="/login")
                div(class="row it-login")
                    if typeof(email) !== 'undefined'
                        input(class="field", name="email", id="ipEmail" type="text", placeholder="E-mail", value="#{email}")
                    else
                        input(class="field", name="email", id="ipEmail" type="text", placeholder="E-mail")
                div(class="row it-login")
                    input(class="field", name="senha", type="password", placeholder="Senha")
                div(class="row it-login form-group form-check")
                    if typeof(email) !== 'undefined'
                        label(class="form-check-label", for="checkEmail")
                            input(class="form-check-input", id="checkEmail", name="lembrar", type="checkbox", checked="checked")
                            | Lembrar e-mail
                        //input(class="form-check-input", id="checkEmail", name="lembrar", type="checkbox", checked="checked")
                        //label(class="form-check-label", for="checkEmail") Lembrar e-mail
                    else
                        label(class="form-check-label", for="checkEmail")
                            input(class="form-check-input", id="checkEmail", name="lembrar", type="checkbox")
                            | Lembrar e-mail
                        //input(class="form-check-input", id="checkEmail", name="lembrar", type="checkbox")
                        //label(class="form-check-label", for="checkEmail") Lembrar e-mail
                div(class="row it-login")
                    input(class="field btn btn-primary", type="submit", value="Logar", name="submit" )
    if error
        div(class="alert alert-danger alertLogin")
            strong #{error} 