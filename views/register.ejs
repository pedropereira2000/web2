<link rel="stylesheet" href="/stylesheets/intro.css">

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card-intro card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%-include ('./partials/messages')-%>
      <form action="/users/register" method="POST">
      <div class="form-group">
      <label for="name" class="lbl">Name</label>
      <input 
       type="name"
       id="name"
       name="nome"
       class="form-control"
       placeholder="Enter Name"
       value="<%= typeof name != 'undefined' ? name : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="email" class="lbl">Email</label>
      <input
       type="email"
       id="email"
       name="email"
       class="form-control"
       placeholder="Enter Email"
       value="<%= typeof email != 'undefined' ? email : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="password" class="lbl">Password</label>
      <input
       type="password"
       id="password"
       name="pass"
       class="form-control"
       placeholder="Create Password"
       value="<%= typeof password != 'undefined' ? password : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="password2" class="lbl">Confirm Password</label>
      <input
       type="password"
       id="password2"
       name="password2"
       class="form-control"
       placeholder="Confirm Password"
       value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
    />
    </div>
    <div class="form-group">
      <label for="tipoUser" class="lbl">Tipo de usu√°rio</label>
      <select name="type" id="tipoUser">
        <option value="admin">admin</option>
        <option value="normal">normal</option>
      </select>
    </div>
    <div class="form-group">
      <label for="password2" class="lbl">Selecione uma imagem</label>
      <input
       type="file"
       id="file"
       name="image"
       class="form-control"
       placeholder="Escolha uma imagem"
    />
    <button type="submit" class="btn-reg btn btn-primary btn-block">
      Register </button>
    </form>
    <p class="lead mt-4">Have An Account? 
      <a href="/users/login">Login</a></p>
    </div>
    </div>
    </div>